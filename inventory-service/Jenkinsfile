pipeline {
    agent any
    tools {
        maven 'Maven-3.9.11'
    }
    stages {
        stage('Compile') {
            steps {
                sh 'cd inventory-service && mvn clean compile'
            }
        }
        stage('Test') {
            steps {
                sh 'cd inventory-service && mvn test'
            }
        }
        stage('Build') {
            steps {
                sh 'cd inventory-service && mvn package'
            }
        }
        stage('Image') {
            steps {
                sh 'cd inventory-service && docker build -t satish156156/inventory-service:latest .'
            }
        }
        stage('Push') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'dockerhub-credentials', usernameVariable: 'DOCKER_USERNAME', passwordVariable: 'DOCKER_PASSWORD')]) {
                    sh 'docker login -u $DOCKER_USERNAME -p $DOCKER_PASSWORD'
                    sh 'docker push satish156156/inventory-service:latest'
                }
            }
        }
    }
}